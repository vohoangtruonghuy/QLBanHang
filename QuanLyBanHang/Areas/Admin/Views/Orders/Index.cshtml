@model IEnumerable<QuanLyBanHang.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hóa đơn</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr class="table-secondarysa">
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @{ if (@item.Status == 0)
                    {
                        <div style="color:red">Đang chờ xác nhận. </div> }
                    else if (@item.Status == 1)
                    {
                        <div style="color:green">Đã xác nhận  </div> }
                    else
                    {
                        <div style="color:orangered">Đang chờ xác nhận </div> } }

            </td>
            <td>
                @{ if (@item.Pay == 1)
                    {
                        <div style="color:red">Thanh toán tiền mặt</div> }
                    else if (@item.Pay == 2)
                    {
                        <div style="color:brown">Thanh toán chuyển khoản</div> } }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @String.Format("{0:0,0}", item.Total) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
