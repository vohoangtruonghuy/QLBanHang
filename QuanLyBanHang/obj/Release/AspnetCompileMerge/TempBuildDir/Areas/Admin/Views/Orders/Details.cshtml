@model QuanLyBanHang.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dd>
            @{
                if (Model.Status == 0)
                {
                    <div style="color:red">Đang chờ xác nhận</div>
                }
                else if (Model.Status == 1)
                {


                    <div style="color:slateblue">Đã xác nhận</div>

                }
                else
                {
                    <div style="color:red">Đang chờ xác nhận</div>

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pay)
        </dt>

        <dd>
            @{
                if (Model.Pay == 1)
                {
                    <div style="color:red">Thanh toán tiền mặt</div>
                }
                else if (Model.Pay == 2)
                {
                    <div style="color:slateblue">Thanh toán chuyển khoản</div>

                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Total) VNĐ
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        @Html.Action("CTDetails", "Orders")
    </dl>
</div>
<button class="btn btn-info">
    @Html.ActionLink("Xác nhận đơn hàng", "Xacnhan", new { id = Model.Id }, new { @style = "color:white;" })
</button>
<br />
<br />
<button class="btn btn-success">
    @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @style = "color:white;" })
</button>

